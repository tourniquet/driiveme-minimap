{
  "name": "DriiveMe Minimap",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Dsiplay a minimap when cursor hover postcode",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.driiveme.co.uk/*"],
      "js": ["main.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
